<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="23dp"
        android:background="#00000000"
        android:text="    新建相册"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#550000dd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_add_photo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="#1100ffff"
                android:paddingBottom="15dp"
                android:src="@drawable/mi_select_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="选择图片"
                android:textColor="#0000ff"
                android:textSize="15sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_add_theme"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="#1100ff00"
                android:paddingBottom="15dp"
                android:src="@drawable/mi_select_theme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="选择主题"
                android:textColor="#0000ff"
                android:textSize="15sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_add_ws"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="#090000ff"
                android:paddingBottom="15dp"
                android:src="@drawable/mi_select_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="新建相册"
                android:textColor="#0000ff"
                android:textSize="15sp" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#550000dd" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="23dp"
        android:background="#00000000"
        android:text="    工作空间"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#550000dd" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <ListView
            android:id="@+id/list_view_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_ws_bg"
            android:layout_width="210dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/mi_go"
            android:visibility="visible" />
    </FrameLayout>

</LinearLayout>