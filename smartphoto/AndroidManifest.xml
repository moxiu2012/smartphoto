<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moxiuyuer.smartphoto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.PlayActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.VideoPlayActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.WorkSpaceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.ShowThemeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.ThemeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.EditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.PhotoActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.ShowImageActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.ShowItemImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.ShowWorkSpaceFileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.moxiuyuer.smartphoto.activity.SelectMusicActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>